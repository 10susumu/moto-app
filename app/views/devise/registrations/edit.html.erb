<div class="main py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="h2 font-weight-bold">
        プロフィール写真
        </div>
          <%= image_tag @user.avatar, class:"mh-10 rounded-circle", width:"300", height:"300" if @user.avatar.attached? %>
        <div class="col">
          <%= form_with model:@user, url:user_registration_path, method:"put", local: true do |f| %>
            <%= f.file_field :avatar %>
            <%= f.submit "プロフィール写真を編集する", class:"btn btn-lg btn-primary btn-block"%>
          <% end %>
        </div>
      </div>
      <div class="col-md-6">
        <%= form_with model:@user, url:user_registration_path, method:"put", local: true do |f| %>
        <div class="h2 font-weight-bold">
        ニックネーム
        </div>
        <div class="h4">
            <%= f.text_area :nickname, placeholder: "ニックネーム", rows:"1", class:"form-control", id:"", required:true %>
        </div>
        <div class="h2 font-weight-bold">
        自己紹介
        </div>
        <div class="h4">
            <%= f.text_area :profile, placeholder: "自己紹介", rows:"4", class:"form-control", id:"", required:true %>
        </div>
            <%= f.submit "編集する", class:"btn btn-lg btn-primary btn-block"%>
          <% end %>
      </div>
    </div>
  </div>
</div>