<div class="main py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="h2">
          <%= image_tag "logo.png", class:"mh-10", width:"35"%>
          <%= @user.nickname %>
        </div>
        <div class="col">
          <%= image_tag @content.image, class:"img-fluid"%>
        </div>
      </div>
      <div class="col-md-3">
        <div class="font-weight-bold">
          テキスト
        </div>
        <div class="">
          <%= @content.text %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="font-weight-bold">
          コメント
        </div>
        <div class="">
          <%= form_with model:@comment, url:content_comment_index_path(@content), local: true do |f| %>
            <%= f.hidden_field :content_id, value: @content.id %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.text_area :text, placeholder: "コメントする", rows: "1", class:"form-control" %>
            <%= f.submit "投稿する", class:"btn btn-lg btn-primary btn-block"%>
          <% end %>

          <div class="overflow-auto" style="height: 50vh;">
            <% @comments.each do |c| %>
              <p>
                <span class="font-weight-bold"><%= @users[c.user_id - 1].nickname %></span>
                <span><%= c.text %></span>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>