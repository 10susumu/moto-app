
<div class="main py-5">
  <div class="container">
    <div class="row">

      <% @contents.each do |c| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm image-parent">
            <%= link_to content_path(c.id) do %>
            <%= image_tag c.image, class:"card-img-top image", alt:"Card image cap" if c.image.attached? %>
          </div>
        </div>
      <% end %>
      <% end %>

      <% if @contents == [] %>
        <% 5.times do %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm image-parent">
              <img class="card-img-top image" src="https://picsum.photos/seed/picsum/300" alt="Card image cap">
            </div>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
