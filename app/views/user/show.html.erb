<div class="main py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="h2">
          <%= image_tag @user.avatar, class:"mh-10 rounded-circle", width:"300", height:"300" if @user.avatar.attached? %>
          <%= @user.nickname %>
        </div>
        <div class="col">
          <%= form_with model:@user, url:user_registration_path, method:"put", local: true do |f| %>
            <%= f.file_field :avatar %>
            <%= f.text_area :profile, placeholder: "自己紹介", rows:"1", class:"form-control", id:"", required:true %>
            <%= f.submit "編集する", class:"btn btn-lg btn-primary btn-block"%>
          <% end %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="font-weight-bold">
          テキスト
        </div>
        <div class="">
          <%= @user.profile %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="font-weight-bold">
          コメント
        </div>
        <div class="">

          <div class="overflow-auto" style="height: 50vh;">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>